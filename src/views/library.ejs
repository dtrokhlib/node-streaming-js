<%- include('partials/header.ejs') %>
<div class="container-fluid">
  <div class="row align-items-center">
    <div class="col" style="text-align: center;">
      <h4>Watch Video <span class="badge bg-secondary">Library</span></h4>
    </div>
  </div>
</div>


<!--  -->

<div class="scrollbar p-2">
  <div class="container-fluid">
    <div class="row">
      <% videos1.forEach((video,index) => { %>
      <div class="col p-4">
        <iframe class="pb-video-frame" width="100%" height="230" src="/media/video/<%= video.videoFile.filename %>"
          frameborder="0" allowfullscreen></iframe>
        <a class="video-link" href="video/<%= video.id %>/view"><label
            class="form-control label-warning text-center"><%= video.name %></label></a>
      </div>
      <% }); %>
    </div>
    <div class="row">
      <% videos2.forEach((video,index) => { %>
      <div class="col p-4">
        <iframe class="pb-video-frame" width="100%" height="230" src="/media/video/<%= video.videoFile.filename %>"
          frameborder="0" allowfullscreen></iframe>
        <a class="video-link" href="video/<%= video.id %>/view"><label
            class="form-control label-warning text-center"><%= video.name %></label></a>
      </div>
      <% }); %>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="d-flex justify-content-center">
      <nav aria-label="...">
        <ul class="pagination">
          <% if(Number(skip) == 0) { %>
          <li class="page-item disabled"><a class="page-link" href="">Previous</a></li>
          <% } else { %>
          <li class="page-item"><a class="page-link" href="/library?skip=<%= Number(skip) - 1%>">Previous</a></li>
          <% } %>

          <% for(let i = 0; i < count; i++) { %>
          <li <% if(i == Number(skip)) { %> class="page-item active" <% } %>><a class="page-link"
              href="/library?skip=<%= i %> "><%= i + 1 %></a></li>
          <% } %>


          <% if(Number(skip) + 1 == count) { %>
          <li class="page-item disabled">
            <a class="page-link" href="">Next</a>
          </li>
          <% } else { %>
          <li class="page-item">
            <a class="page-link" href="/library?skip=<%= Number(skip) + 1 %>">Next</a>
          </li>
          <% } %>

        </ul>
      </nav>
    </div>
  </div>
</div>



<%- include('partials/footer.ejs') %>