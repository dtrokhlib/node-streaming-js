<%- include('partials/header.ejs') %>

<div class="container-fluid p-5">
  <div class="row p-2">
    <div class="col">
      <span style="font-size: 15px; font-weight: 700">User Email: <%= user.email %></span>
    </div>
  </div>
  <div class="row p-2">
    <div class="col">
      <span style="font-size: 15px;">My uploaded videos:</span>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <ol class="list-group list-group-numbered">
        <% videos.forEach(video => { %>
        <li class="list-group-item d-flex justify-content-between align-items-start">
          <div class="ms-2 me-auto">
            <div class="fw-bold">Video name: <%= video.name %></div>
            Video description: <%= video.description %>
          </div>
          <span class="badge bg-primary rounded-pill">
            <div class="m-1">Rating: <%= video.rating * 100 %> </div>
            <div class="m-1">Views: <%= video.views %></div>
          </span>
          <span class="badge rounded-pill" style="margin: 2px 8px;padding: 14px;">
            <a href="video/<%= video.id %>/view">
              <div>View video
            </div></a>
          </span>
        </li>
        <% }) %>
      </ol>
    </div>
  </div>
</div>

<%- include('partials/footer.ejs') %>